@model Autentals.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Add New Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SaveCustomer", "Customers"))
{
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input class="form-control" id="FirstName" name="firstName" placeholder="Required">
        <label style="color:orangered" id="fnLblError"></label>

        <p>&nbsp;</p>

        <label for="LastName">Last Name</label>
        <input class="form-control" id="LastName" name="lastName" placeholder="Required" required>
        <label style="color:orangered" id="lnLblError"></label>

        <p>&nbsp;</p>

        <label for="BirthDate">Date of Birth</label>
        <input type="date" class="form-control" name="birthDate" id="BirthDate">
        <label style="color:orangered" id="bdayLblError"></label>

        <p>&nbsp;</p>

        <label>Select Membership</label>
        <select class="form-control" id="membershipName" name="membershipName">
            <option disabled selected value="">Available Memberships</option>
            @foreach (var membership in Model.MembershipInformation)
            {
                <option>@membership.MembershipName</option>
            }
        </select>

        <p>&nbsp;</p>

        <button type="submit" class="btn btn-success disabled" id="submitBtn"  style="margin-right: 20px">Save</button>

        &nbsp;
    </div>
}
<button class="btn btn-danger" onclick="location.href = '@Url.Action("AllCustomers", "Customers", null)'">
    Cancel
</button>

@section scripts {
    <script type="text/javascript" src="~/Scripts/date.js"></script>
    <script type="text/javascript" src="~/Scripts/NewCustomerForm.js"></script>
}


